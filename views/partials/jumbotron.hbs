<style>
    .header .container img {
        width: 100%;
        height: 30vh;
        object-fit: cover;
        background-position: top;
    }

    .header .container {
        position: relative;
    }

    .header .slogan {
        width: 20rem;
        left: 2.4rem;
        top: 1.4rem;
        display: flex;
        flex-direction: column;
        position: absolute;
        background: #fff;
        box-shadow: 0 2px 4px rgb(0 0 0 / 8%), 0 4px 12px rgb(0 0 0 / 8%);
        padding: 1.4rem;
    }

    .header .slogan h1 {
        font-size: 2rem;
    }

    .header .slogan p {
        margin: 0;
    }

    .transfer-container {
        position: absolute;
        top: 1px;
    }

    .action-transfer {
        margin-right: 30px;
        color: white;
        background-color: #546078;
        border-color: transparent;
    }
</style>

<section class="header">
    <div class="container">
        <img src="/img/blog-recent-3.jpg" alt="Learning Community" width="100%" height="30vh"/>
        <div class="slogan d-none d-md-block">
            <h1>{{t.logoTitle}}</h1>
            <p>{{t.logoSubtitle}}</p>
        </div>
        <div class="mt-2 col-12 transfer-container">
            <a href="/transfer/agree" onclick="goToLink(event)"
               class="btn btn-outline-secondary btn-lg float-end action-transfer">
                <img style="width: 30px; height: 30px" src="/img/transfer.svg" alt="Transfer logo"/>
                {{t.transfer}}
            </a>
        </div>
    </div>
</section>

<script>
    function goToLink(event) {
        event.preventDefault();
        history.pushState(hrefLang(event.target.href),'',hrefLang(event.target.href));
        history.go();
    }
</script>